---
import Layout from '../layouts/Layout.astro'
import { sortPosts } from '@/helpers/Post'
import type { Post } from '@/helpers/Post'
import projects from '@/assets/projects'
import ProjectLink from '@/components/ProjectLink.astro'

const meta = {
  title:
    'Matt Waler builds websites and applications with a variety of modern tools and technologies.',
  description:
    'Matt Waler builds websites and applications using tools like Astro, React, React Native, Swift, and Tailwind CSS.',
}

const posts: Post[] = Object.values(
  import.meta.glob('./blog/*.md', { eager: true })
)

const sortedPosts = sortPosts(posts).slice(0, 3)
---

<Layout meta={meta}>
  <div class="typography">
    <h1>I build websites and applications using modern tools and technologies.</h1>
    <p>
      Whether it's a static website or a full-blown iOS application, Iâ€™m all about taking ideas and turning them into clean, easy-to-use products. I pride myself on keeping my code simple, practical, and easy to maintain, resorting to complexity only when necessary.
    </p>
    <h2>Skills</h2>
    <ul>
      <li>Alpine.js</li>
      <li>Astro.js</li>
      <li>JavaScript & Typescript</li>
      <li>React & React Native</li>
      <li>Swift</li>
      <li>Tailwind CSS</li>
    </ul>
    <a class="text-code-green font-bold" href="/projects/">Take a look at some of my projects.</a>
    <h2>Hobbies</h2>
    <ul>
      <li>Getting worse at tennis</li>
      <li>Lifting weights and feeling very sore</li>
      <li>Botching recipes in the kitchen</li>
      <li>Losing games of Marvel Snap</li>
      <li>Listening to pop-punk music (mainly MGK)</li>
      <li>Watching Edgar Wright films</li>
    </ul>
    <a class="text-code-green font-bold" href="/contact/">Get in touch with me.</a>
    <h2>Recent Posts</h2>
    <ul>
      {sortedPosts.map(post => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))}
    </ul>
    <h2>Recent Projects</h2>
    <ul>
      {projects.slice(0, 3).map(project => (
        <ProjectLink project={project} />
      ))}
    </ul>
  </div>
</Layout>
