<header
  class="absolute top-4 left-0 right-0 w-full z-50"
  x-data="{ showMobile: false }"
>
  <div class="container">
    <div
      x-ref="navigation"
      class="
        text-white mx-auto rounded-full py-2 flex-wrap flex gap-x-4
        gap-y-2 items-center justify-between duration-500 transition-all max-w-full
      "
    >
      {# Logo #}
      <div class="flex items-center justify-start flex-none md:w-40">
        <a href="/" class="flex items-center gap-1">
          {% include '/icons/logo.twig' with { class: "size-8" } %}
          <span class="text-lg font-medium">matt<span class="font-extrabold">waler</span></span>
        </a>
      </div>
      {# Desktop Links #}
      <div class="justify-center items-center gap-8 hidden md:flex">
        {% for item in navigation %}
          <a class="font-medium text-white/90" href="{{ item.route }}">{{ item.name }}</a>
        {% endfor %}
      </div>
      {# CTA & Menu #}
      <div class="flex-none items-center justify-end flex gap-4 md:w-40">
        <a class="button max-[400px]:hidden" href="/contact">Get In Touch</a>
        <button
          aria-label="toggle navigation"
          class="flex items-center justify-center md:hidden"
          @click="showMobile = !showMobile"
          x-ref="button"
        >
          <span x-show="!showMobile">
            {% include '/icons/menu.twig' with { class: "size-6" } %}
          </span>
          <span x-show="showMobile">
            {% include '/icons/close.twig' with { class: "size-6" } %}
          </span>
        </button>
      </div>
    </div>
    {# Mobile Links #}
    <div
      class="bg-black/75 px-4 py-2 mt-1 inline-flex flex-col items-center justify-center gap-4 backdrop-blur rounded-2xl text-white md:hidden"
      x-anchor.bottom-end.offset.8="$refs.button"
      x-cloak
      x-transition.duration.300ms
      x-show="showMobile"
    >
      {% for item in navigation %}
        <a class="font-medium text-lg px-4" href="{{ item.route }}">{{ item.name }}</a>
      {% endfor %}
    </div>
  </div>
</header>
