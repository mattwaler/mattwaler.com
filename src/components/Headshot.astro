---
import HeadshotPicture from '@/assets/headshot.jpg'
import ImageBlur from './ImageBlur.astro'
import Pin from '@/assets/pin.svg'
---

<div class="flex items-center gap-4">
  <a href="/" aria-label="Go to homepage">
    <ImageBlur
      src={HeadshotPicture}
      width={256}
      height={256}
      class="border-code-green mx-auto size-24 rounded-xl border-3 object-cover object-center sm:mx-0"
    />
  </a>
  <div>
    <p
      class="text-text-code-green relative mb-1 inline-block text-2xl font-extrabold"
    >
      Matt Waler
    </p>
    <p class="text-code-green mb-2 text-sm">Web/App Developer</p>
    <p class="flex items-center text-sm text-gray-400">
      <Pin />
      Ohio
    </p>
  </div>
</div>
